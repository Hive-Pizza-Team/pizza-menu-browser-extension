{
  "manifest_version": 2,
  "name": "Pizza Menu",
  "version": "0.0.0.2",
  "description": "Pizza Toolbar is a collection of shortcuts to useful Hive blockchain apps.",

  "icons": { "128": "assets/pizza_team_logo.png" },

  "browser_action": {
    "default_title": "Start",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}